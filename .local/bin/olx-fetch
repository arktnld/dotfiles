#!/bin/bash

LOCKFILE=/tmp/lock.txt
if [ -e ${LOCKFILE} ] && kill -0 `cat ${LOCKFILE}`; then
    echo "already running"
    exit
fi

# make sure the lockfile is removed when we exit and then claim it
trap "rm -f ${LOCKFILE}; exit" INT TERM EXIT
echo $$ > ${LOCKFILE}

olx=/tmp/olx.html
diffs=/tmp/diffs
urlbg=/tmp/urlbg
post=/tmp/post.html

home=/home/arktnld
ofhome=$home/.config/olx-fetch

getprice() {
    html2text $post \
        | grep -E '## R\$ [0-9,]+' \
        | tr -d '#()[],\-:+.!' \
        | xargs
}

getname() {
    html2text $post \
        | tr -d "()[],\-:+.!\'" \
        | grep -E '^# [a-zA-Z0-9 ]+' \
        | tr -d '#' \
        | xargs
}

getpage() {
    echo "getpage $1"
    temp=/tmp/$1
    # [ -f "$temp" ] && rm "$temp"
    rm "$temp" >/dev/null 2>&1
    timeout 30s aria2c --retry-wait=3 -q --dir=/tmp -o "$1" "$2"
}

geturls() {
    echo geturls
    html2text --reference-links --no-wrap-links $olx \
        | grep -E '//[a-z][a-z].olx.com.br/.*/.*/.*' \
        | grep -e $(echo $1 | sed 's# #\\|#g') \
        | grep -iv $(echo $2 | sed 's# #\\|#g') \
        | tr -s ' ' \
        | cut -d' ' -f3 \
        >| $urlbg
}

diffurls() {

    if [ ! -f "$regs" ]; then
        cat $urlbg >| "$regs"
        exit 1
    fi

    echo diffurls
    num=-1
    i=1
    reg=$(sed -n "$i"p "$regs")

    while [ $num -eq -1 ]; do
        # diff --new-line-format="" --unchanged-line-format="" "$urlbg" "$regs" | tac > $diffs
        last="$(cat $urlbg | grep -n $reg | cut -d: -f1)"
        echo $last
        num=$((last - 1))
        echo $num
        i=$((i + 1))
        reg=$(sed -n "$i"p "$regs")
        echo $reg
    done

    awk -vs=1 -ve="$num" 'NR>e{exit}NR>=s' "$urlbg" | tac >| $diffs
    cat $urlbg
}

getcity() {
    html2text $post \
        | grep -iA2 '^Município$' \
        | sed 's/Município//' \
        | head -n3 \
        | tr -d "'" \
        | xargs
}

getdistrict() {
    html2text $post \
        | grep -iA2 '^Bairro$' \
        | sed 's/Bairro//' \
        | head -n3 \
        | tr -d "'" \
        | xargs \
        | sed "s/\([0-9a-zA-ZçãāâáǎàêẽēéěèîĩīíǐìôõōóǒòûũūúǔùǖǘǚǜÂÃĀÁǍÀÊẼĒÉĚÈÎĨĪÍǏÌÔÕŌÓǑÒÛŨŪÚǓÙǕǗǙǛ() ]\+\)/\1,/"
}

loop() {
    echo init while
    # get olx url post and send to telegram
    while read -r url;do
        echo while loop
        echo "url: $url"
        getpage "post.html" "$url"

        name=$(getname)
        echo "name: $name"
        price=$(getprice)
        echo "price: $price"
        # tinyurl=$("$bitly" "$url")
        district=$(getdistrict)
        echo "district: $district"
        city=$(getcity)
        echo "city: $city"
        state=$(echo "$url" | cut -d'/' -f3 | cut -d'.' -f1 | tr "[:lower:]" "[:upper:]")
        echo "state: $state"


        printf "<b>%s</b>\n\n%s\n\n<i>%s %s</i> #%s\n\n<a href='%s'>Link</a>" "$price"  "$name" "$district" "$city" "$state" "$url" \
            | timeout 30s telegram-send --config "$tsconf" --format html --stdin

    done < $diffs
    echo end while
}

## Logic ##

tsconf="$ofhome/olxbg.conf"
regs="$ofhome/olxbgs"

file="olx.html"
webpg="https://www.olx.com.br/brasil?q=jogo%20de%20tabuleiro&sf=1#"

include="hobbies-e-colecoes artigos-infantis"
exclude="boneca xadrez luccas pop barbie infantil kosmos brinquedos?\b
princesas?\b dama imoveis velha gamão brinquedos?\b resta"

echo init script
getpage "$file" "$webpg"
geturls "$include" "$exclude"
[ -s "$urlbg" ] || exit 1
diffurls
loop

cat $urlbg >| "$regs"
rm -f $olx $urlbg $diffs

rm -f ${LOCKFILE}
